{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "linux": {
        "command": "./bin/hugo"
    },
    "windows": {
        "command": "bin\\hugo.exe"
    },
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "serve",
            "args": [
                "-w",
                "-D"
            ],
            "isBackground": true
        },
        {
            "taskName": "build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "args": [
                "-D"
            ]
        }
    ]
}